rules_version = '2';
service lg.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Public read access for all files
      allow read: if true;
      
      // Only authenticated admin users can upload/delete
      // In next steps, you can add more specific rules for file types (images) and size
      allow write: if request.auth != null && request.auth.token.email.matches('.*@gmail.com');
    }
  }
}
